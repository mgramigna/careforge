{
  "name": "@careforge/expo",
  "version": "0.2.4",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "git clean -xdf .expo .turbo node_modules",
    "dev": "expo start",
    "dev:android": "expo start --android",
    "dev:ios": "expo start --ios",
    "lint": "eslint .",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "dependencies": {
    "@careforge/canvas": "workspace:*",
    "@expo-google-fonts/open-sans": "^0.2.3",
    "@expo-google-fonts/roboto": "^0.2.3",
    "@expo/metro-config": "^0.10.7",
    "@expo/vector-icons": "^13.0.0",
    "@hookform/resolvers": "^3.3.2",
    "@react-native-community/datetimepicker": "7.2.0",
    "@tanstack/react-query": "^5.8.7",
    "@trpc/client": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dayjs": "^1.11.10",
    "expo": "^49.0.21",
    "expo-constants": "~14.4.2",
    "expo-font": "~11.4.0",
    "expo-image": "~1.3.5",
    "expo-linking": "~5.0.2",
    "expo-router": "2.0.12",
    "expo-secure-store": "~12.3.1",
    "expo-splash-screen": "~0.22.0",
    "expo-status-bar": "~1.7.1",
    "fhirpath": "^3.9.0",
    "nativewind": "^4.0.13",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.49.0",
    "react-native": "0.72.7",
    "react-native-autocomplete-dropdown": "^3.1.0",
    "react-native-date-picker": "^4.3.4",
    "react-native-dropdown-picker": "^5.4.6",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-modal-datetime-picker": "^17.1.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-root-siblings": "^5.0.1",
    "react-native-root-toast": "^3.5.1",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.1",
    "react-native-svg": "^14.1.0",
    "react-native-ui-datepicker": "^1.0.10",
    "superjson": "2.2.0",
    "tailwind-merge": "^2.1.0",
    "ts-pattern": "^5.0.5",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/runtime": "^7.23.2",
    "@careforge/api": "workspace:*",
    "@careforge/eslint-config": "workspace:*",
    "@careforge/prettier-config": "workspace:*",
    "@careforge/tailwind-config": "workspace:*",
    "@careforge/tsconfig": "workspace:*",
    "@expo/config-plugins": "^7.2.5",
    "@types/babel__core": "^7.20.4",
    "@types/react": "^18.2.37",
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "tailwindcss": "3.3.5",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@careforge/eslint-config/base",
      "@careforge/eslint-config/react"
    ],
    "ignorePatterns": [
      "expo-plugins/**"
    ],
    "rules": {
      "no-restricted-imports": "off",
      "@typescript-eslint/no-restricted-imports": [
        "error",
        {
          "paths": [
            {
              "name": "@careforge/api",
              "allowTypeImports": true
            },
            {
              "name": "@careforge/canvas",
              "allowTypeImports": true
            },
            {
              "name": "react-native",
              "importNames": [
                "Text"
              ],
              "message": "Please use Text from @/components/atoms/Text instead"
            }
          ]
        }
      ]
    }
  },
  "prettier": "@careforge/prettier-config"
}
